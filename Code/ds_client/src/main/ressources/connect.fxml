                    <font>
                        <Font size="37.0" />
                    </font>
                </Label>
            <Label layoutX="209.0" layoutY="185.0" text="Nom d'utilisateur :">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label layoutX="209.0" layoutY="280.0" text="Mot de passe :">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="username" layoutX="391.0" layoutY="183.0" prefHeight="25.0" prefWidth="199.0" promptText="username" />
